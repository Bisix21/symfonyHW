{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} :: Encode
{% endblock %}
{% block breadcrumbs %}
    {{ parent() }}-> <a href="{{ path('_encode_page') }}">Encode Url</a>
{% endblock %}
{% block body %}
    <form action="{{ path('_encode_form') }}" method="POST">
        <label for="url">Url</label>
        <input id="url" type="text" name="url">
        <label for="length">Length</label>
        <input id="length" type="number" step="1" min="3" max="10" value="3" name="length">
        <br>
        <button type="submit"> Encode url</button>
    </form>
{% endblock %}